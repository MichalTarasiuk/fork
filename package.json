{
  "name": "remind",
  "version": "1.0.0",
  "description": "üß† Remind is library for state management in React",
  "main": "./dist/remind.js",
  "types": "./@types/index.d.ts",
  "repository": "https://github.com/MichalTarasiuk/remind.git",
  "author": "Micha≈Ç Tarasiuk",
  "contributors": [
    "Micha≈Ç Tarasiuk (https://github.com/MichalTarasiuk)"
  ],
  "keywords": [
    "react",
    "state",
    "manager",
    "management",
    "redux",
    "store"
  ],
  "bugs": {
    "url": "https://github.com/MichalTarasiuk/remind/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "jest --watch"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSameLine": true,
    "tabWidth": 2,
    "printWidth": 80
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleDirectories": [
      ".",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^react(.*)$": "<rootDir>/node_modules/react$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-jest": "^27.4.6",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.2",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
