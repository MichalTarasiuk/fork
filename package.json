{
  "name": "fork",
  "private": true,
  "version": "1.0.1",
  "description": "Fork is library for state management in React",
  "repository": "https://github.com/MichalTarasiuk/fork.git",
  "exports": {
    "import": "./build/index.mjs",
    "default": "./build/index.mjs",
    "require": "./build/index.cjs",
    "browser": "./build/index.umd.js"
  },
  "types": "./build/src/_api.d.ts",
  "main": "./build/index.cjs",
  "module": "./build/index.mjs",
  "browser": "./build/index.umd.js",
  "unpkg": "./build/index.umd.js",
  "author": {
    "name": "Michał Tarasiuk",
    "email": "tarasiuk.michal03@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "test": "jest --watch",
    "build": "rimraf build && rollup --config",
    "build:watch": "rollup --config --watch",
    "build:publish": "yarn build && yarn publish"
  },
  "files": [
    "build"
  ],
  "contributors": [
    "Michał Tarasiuk (https://github.com/MichalTarasiuk)"
  ],
  "workspaces": [
    ".",
    "examples/*"
  ],
  "keywords": [
    "react",
    "state",
    "manager",
    "management",
    "redux",
    "store"
  ],
  "bugs": {
    "url": "https://github.com/MichalTarasiuk/fork/issues"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "bracketSameLine": true,
    "tabWidth": 2,
    "printWidth": 80
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typeofweb"
    ],
    "extends": [
      "plugin:@typeofweb/recommended"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-assertions": "off",
      "import/no-cycle": "off"
    },
    "ignorePatterns": [
      "examples/**/*",
      "dist/**/*",
      "tests/**/*"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "21.0.3",
    "@rollup/plugin-typescript": "8.3.1",
    "@testing-library/react": "13.1.1",
    "@testing-library/react-hooks": "^8.0.0",
    "@typeofweb/eslint-plugin": "^0.3.0",
    "@types/jest": "27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/react": "18.0.0",
    "@types/react-dom": "18.0.0",
    "babel-jest": "27.5.1",
    "eslint": "^8.14.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "immer": "^9.0.12",
    "jest": "27.5.1",
    "lodash": "^4.17.21",
    "on-change": "^4.0.1",
    "prettier": "2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rollup": "2.70.1",
    "rollup-plugin-filesize": "9.1.2",
    "rollup-plugin-jsx": "^1.0.3",
    "rollup-plugin-license": "2.6.1",
    "ts-jest": "^28.0.3",
    "typescript": "4.6.3"
  },
  "peerDependencies": {
    "immer": ">=9.0.0",
    "lodash": ">=4.0.0",
    "react": ">=16.8"
  },
  "resolutions": {
    "immer": ">8.0.0",
    "lodash": ">4.0.0",
    "react": ">16.8.0"
  }
}
