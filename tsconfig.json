{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./@types"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
